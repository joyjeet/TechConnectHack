{
  // ============================================
  // GitHub Copilot Configuration
  // ============================================
  "github.copilot.enable": {
    "*": true
  },
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,

  // ============================================
  // Agent & Chat Features (VS Code 1.106-1.108)
  // ============================================
  
  // Enable nested agents markdown files for chat
  "chat.useNestedAgentsMdFiles": true,

  // Enable Agent Skills - allows using .github/skills/ folders
  // Skills are portable across VS Code, Copilot CLI, and Copilot coding agent
  // See: https://code.visualstudio.com/docs/copilot/customization/agent-skills
  "chat.useAgentSkills": true,

  // Enable custom agents as subagents (allows agents to delegate to other agents)
  // See: https://code.visualstudio.com/updates/v1_107#_run-agents-as-subagents-experimental
  "chat.customAgentInSubagent.enabled": true,

  // Use custom agents with background agents
  // See: https://code.visualstudio.com/updates/v1_107#_use-custom-agents-with-background-agents-experimental
  "github.copilot.chat.cli.customAgents.enabled": true,

  // Enable built-in GitHub MCP Server for seamless GitHub integration
  // See: https://code.visualstudio.com/updates/v1_107#_github-mcp-server-provided-by-github-copilot-chat-preview
  "github.copilot.chat.githubMcpServer.enabled": true,

  // ============================================
  // Terminal Tool Auto-Approval (Security)
  // ============================================
  
  // Enable terminal auto-approve for common safe commands
  // See: https://code.visualstudio.com/updates/v1_108#_terminal-tool-auto-approve-default-rules
  "chat.tools.terminal.enableAutoApprove": true,
  
  // Auto-approve npm scripts defined in package.json (requires workspace trust)
  "chat.tools.terminal.autoApproveWorkspaceNpmScripts": true,

  // Prevent terminal tool commands from being added to shell history
  "chat.tools.terminal.preventShellHistory": true,

  // ============================================
  // Chat View Experience
  // ============================================

  // Show chat title for easy session identification
  "chat.viewTitle.enabled": true,

  // Enable Agent Sessions view integration
  "chat.viewSessions.enabled": true,

  // ============================================
  // Experimental Features
  // ============================================

  // Enable inline chat v2 (optimized for single-file code changes)
  // See: https://code.visualstudio.com/updates/v1_106#_inline-chat-v2-preview
  "inlineChat.enableV2": true,

  // ============================================
  // MCP Configuration
  // ============================================
  
  // Auto-start MCP servers when configuration changes
  "chat.mcp.autostart":"newAndOutdated",

  // ============================================
  // Terminal IntelliSense
  // ============================================
  
  // Enable terminal IntelliSense (now stable in VS Code 1.106+)
  "terminal.integrated.suggest.enabled": true,

  // ============================================
  // Terminal Buffer Management
  // ============================================
  
  // Limit terminal scrollback to prevent overwhelming AI context
  // Default is 1000 lines; keeping it modest helps AI tools process output efficiently
  // Increase if you need more history for debugging long-running processes
  "terminal.integrated.scrollback": 500,

  // ============================================
  // Markdown Settings
  // ============================================
  
  // Disable all markdown validation (for instruction files)
  "markdown.validate.enabled": false,
  "markdown.validate.ignoredLinks": ["**"],
  
  "[markdown]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  }
}
